<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a demo to explore llmedge features."
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/txtMemoryInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="16dp"
            android:text="Loading memory info..." />

        <Button
            android:id="@+id/btnOpenLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local GGUF Asset Demo" />

        <Button
            android:id="@+id/btnOpenHuggingFace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Download from Hugging Face" />

        <Button
            android:id="@+id/btnOpenRag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Open RAG Demo" />

        <Button
            android:id="@+id/btnOpenImageToText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Image to Text (Vision OCR)" />

        <Button
            android:id="@+id/btnOpenLlavaVision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="LLaVA Vision Demo" />

        <Button
            android:id="@+id/btnOpenVideoGeneration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Video Generation (Wan 2.1)" />

        <Button
            android:id="@+id/btnOpenImageGeneration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Image Generation" />

        <Button
            android:id="@+id/btnOpenTranscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ðŸŽ¤ Speech-to-Text (Whisper)" />

        <Button
            android:id="@+id/btnOpenTTS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ðŸ”Š Text-to-Speech (Bark)" />

    </LinearLayout>
</ScrollView>
