<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a demo to explore llmedge features."
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/btnOpenLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local GGUF Asset Demo" />

        <Button
            android:id="@+id/btnOpenHuggingFace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Download from Hugging Face" />

        <Button
            android:id="@+id/btnOpenRag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Open RAG Demo" />

        <Button
            android:id="@+id/btnOpenImageToText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Image → Text (Vision OCR)" />

        <Button
            android:id="@+id/btnOpenLlavaVision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="LLaVA Vision Demo" />

        <Button
            android:id="@+id/btnOpenStableDiffusion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Stable Diffusion (Vulkan)" />

        <Button
            android:id="@+id/btnOpenVideoGeneration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Text → Video (Wan)" />

    </LinearLayout>
</ScrollView>
